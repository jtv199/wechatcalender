/* miniprogram/pages/scheduleDisplay/scheduleDisplay.wxss */
.selected_date {
  padding: 20rpx;
  overflow: hidden;
}

.selected_date>view {
  width: 33.3%;
  float: left;
}

.calendar_panel {
  width: 100%;
  /* height: 600rpx; */
}

.calendar_box {
  width: 100%;
  background: #fff;
  overflow: hidden;
  border-bottom: 1rpx solid #ececec;
}

.weekday_label {
  width: 14.28%;
  float: left;
  display: block;
  text-align: center;
  font-size: 26rpx;
  padding: 10rpx 0;
}

.weekday_label>text {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
}

.select_icon {
  width: 30rpx;
  height: 30rpx;
}

.active_date {
  background: #148447;
  color: #fff;
  border-radius: 50%;
}

.show_box {
  padding: 20rpx;
  font-size: 26rpx;
}

.calendar_box:nth-child(2) .weekday_label{
  float: right;
}

.text_center {
  text-align: center;
}

.container{
  width: calc(100% - 40rpx);
  font-size: 35rpx;
  height: 280rpx;
  line-height: 55rpx;
  

  background-color:burlywood; 
  margin: 20rpx;
  border: 5rpx solid #EEE;
  border-radius: 10rpx;
}

.todo-add {
  position: fixed;
  /*left: 50%;*/
  right: 50rpx;
  bottom: 60rpx;
  bottom: 5%;
  width: 90rpx;
  height: 90rpx;
  margin-left: -45rpx;
  border-radius: 50%;
  font-size: 60rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #fff;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.1);
  color: #000;
}