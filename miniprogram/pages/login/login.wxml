<!--miniprogram/pages/registration/registration.wxml-->
<view class="container">
  <view class="login-icon"> 
 <image class="login-img" src="/images/loginLog.jpg"></image> 
 </view>
 <view class="login-from">  
  <view class='mainListContainer'>
   <image class="nameImage" src="/images/name.jpg"></image> 
  <label class="loginLab">账号</label> 
    <input class="inputText" placeholder="请输入账号" bindinput='bindNameInput'></input>
  </view>
<view class="line"></view> 
  <view class='mainListContainer'>
    <image class="keyImage" src="/images/key.jpg"></image> 
  <label class="loginLab">密码</label> 
    <input class="inputText" placeholder='请输入密码' password='true'  bindinput='bindPasswordInput'></input>
  </view>

  <view class='bindingContainer'>
    <button class='binding' bindtap='bindingSuccess'>登录</button>
  </view>

  <button class='nextButton' bindtap='registerTap'>注册</button>
</view>
</view>